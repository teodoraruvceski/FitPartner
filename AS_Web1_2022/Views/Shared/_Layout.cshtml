@using AS_Web1_2022.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <table>
                    <tr>
                        <td><form action="~/Home/AllFitnessCenters"><input type="submit" value="home" /></form></td>



                        @if ((User)Session["user"] == null)
                        {
                            <td><form action="~/Home/Registration"><input type="submit" value="registration" /></form></td>
                            <td><form action="~/Home/Index"><input type="submit" value="log in" /></form></td>

                        }
                        else
                        {
                            <td><form action="~/Home/Logout"><input type="submit" value="log out" /></form></td>
                            <td><form action="~/Visitor/ProfileInformation"><input type="submit" value="profile information" /></form></td>
                            if (((User)Session["user"]).Role == role.visitor)
                            {
                                <td><form action="~/Visitor/JoinedTrainings"><input type="submit" value="joined training" /></form></td>
                                <td><form action="~/Visitor/AddComment"><input type="submit" value="add comment" /></form></td>

                            }
                            else if (((User)Session["user"]).Role == role.trainer)
                            {
                                <td><form action="~/Trainer/MyTrainings"><input type="submit" value="my trainings" /></form></td>
                            }
                            else if (((User)Session["user"]).Role == role.owner)
                            {
                                <td><form action="~/Owner/MyFitnessCenters"><input type="submit" value="my fitness centers" /></form></td>
                                <td><form action="~/Owner/MyWorkers"><input type="submit" value="my workers" /></form></td>

                                <td><form action="~/Owner/MyComments"><input type="submit" value="my comments" /></form></td>
                            }
                        }
                    </tr>
                </table>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>